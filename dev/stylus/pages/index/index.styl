

//	Секция main
.main
	flex: 1 1 auto
	background-color: #ffffff
.main__content
	padding: 0 40px 40px
	p
		padding-bottom: 20px
		word-break: break-word
	img
		max-width: 100%
		height: auto
	a
		color: $main_bg_color
		text-decoration: none
		transition: 0.4s
		&:hover
			color: $main_color
			text-decoration: none
		&:active
			color: $main_color
			text-decoration: none
		&:focus
			color: $main_color
			text-decoration: none
	blockquote
		max-width: 500px
		padding: 1em 40px
		font-style: italic
		background-color: #F9F9F9
		position: relative
		&:before
			content: ""
			display: block
			position: absolute
			top: 0
			left: 0
			width: 4px
			height: 100%
			background-color: $main_txt_color
	.custom-btn
		a
			min-width: 230px
			padding: 0 5px
			margin: 0
			display: inline-flex
			justify-content: center
			align-items: center
			border: 1px solid transparent
			background-color: $main_color
			text-transform: none
			border-radius: 5px
			font(#fff, 16, $font_main_regular, 1.3)
			text-decoration: none
			transition: 0.4s
			&:hover
				background-color: #fff
				border: 1px solid $main_txt_color
				color: $main_txt_color
				text-decoration: none
				outline: 0
			&:active
				background-color: #fff
				border: 1px solid $main_txt_color
				color: $main_txt_color
				text-decoration: none
				outline: 0
			&:focus
				background-color: #fff
				border: 1px solid $main_txt_color
				color: $main_txt_color
				text-decoration: none
				outline: 0
	ul
		padding-left: 20px
		li
			list-style-type: disc
			a
				color: $main_bg_color
				text-decoration: none
				transition: 0.3s
				&:hover
					color: $main_color
					text-decoration: none
				&:active
					color: $main_color
					text-decoration: none
				&:focus
					color: $main_color
					text-decoration: none
	a.ow-icon-placement-left [class^="sow-icon-"]
		margin: -0.1em .75em -1.2em -0.75em
	.main-button
		transition: 0.5s

